/**Laços de repetição 
 * Tipo: faça enquanto (Em inglês do while)
 * Quando usar: Executa pelo menos uma vez.
*/
programa {
  funcao inicio() {
      inteiro numero
    faca{
      //Loop
      escreva("Informe um número ou 0 para sair: ")
      leia(numero)
    }
    enquanto(numero!=0)
    
  }
}
